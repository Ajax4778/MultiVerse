<% user_action = ((source === 'new_session') ? 'Log In' : 'Create New Account') %>
<% url = ((source === 'new_session') ? session_url : users_url)%>

<h2 class='login-header'>MultiVerse: Possibilities in Poetry</h2>
<h3 class='login-header'><%= user_action %></h3>

<form class='login-form' action="<%= url %>" method="post">
  <%= auth_token %>
  <div class='login-username'>
    Username
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </div>

  <div class='login-password'>
    Password
    <input type="password" name="user[password]">
  </div>

  <div class='login-submit'>
    <input type="submit" value="<%= user_action %>">
  </div>
</form>
